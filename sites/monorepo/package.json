{
	"name": "monorepo-site",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "wireit",
		"preview": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync",
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"dev": {
			"command": "vite dev",
			"files": [],
			"dependencies": [
				"../../packages/monorepo:dev"
			]
		},
		"pre-commit": {
			"dependencies": [
				"check",
				"test"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				"sync"
			],
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@svelte-thing/components": "^0.0.19"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"content-thing": "^0.0.21",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.0",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
