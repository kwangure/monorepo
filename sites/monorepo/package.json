{
	"name": "monorepo-site",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "vite dev",
		"preview": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"check"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		}
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.0"
	},
	"type": "module"
}
