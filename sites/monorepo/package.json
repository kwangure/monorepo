{
	"name": "monorepo-site",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "wireit",
		"preview": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync",
				"../../packages/monorepo:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"dev": {
			"command": "vite dev",
			"files": [],
			"dependencies": [
				"../../packages/monorepo:dev"
			]
		},
		"pre-commit": {
			"dependencies": [
				"check",
				"test"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				"sync"
			],
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@content-thing/memdb": "^0.0.3",
		"@content-thing/svelte-components": "^0.0.1",
		"@svelte-thing/components": "^0.0.28"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.28",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.3",
		"content-thing": "^0.0.31",
		"svelte": "^5.0.0-next.222",
		"svelte-check": "^3.8.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"vitest": "^2.0.5"
	},
	"type": "module"
}
