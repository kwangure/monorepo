{
	"name": "monorepo-template",
	"private": true,
	"scripts": {
		"build": "wireit",
		"format": "wireit",
		"lint": "wireit",
		"pre-commit": "wireit",
		"prepare": "(git --version >/dev/null 2>&1 && git config core.hooksPath git-hooks) || exit 0",
		"release": "wireit",
		"test": "wireit",
		"version": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:packages",
				"build:sites"
			]
		},
		"build:packages": {
			"dependencies": [
				"./packages/monorepo:build"
			]
		},
		"build:sites": {
			"dependencies": [
				"./sites/monorepo:build"
			]
		},
		"format": {
			"command": "prettier . --write --cache --config ./config/prettier.config.mjs --ignore-path ./config/.prettierignore",
			"files": [
				"**/*.{css,html,js,json,md,ts,svelte}",
				"!packages/*/dist/**",
				"!packages/*/types/**",
				"./config/prettier.config.mjs",
				"./config/.prettierignore"
			],
			"output": []
		},
		"lint": {
			"command": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --color --cache --fix --config ./config/eslint.config.js --cache-location ./config/.eslintcache \"**/*.{js,svelte,ts}\"",
			"files": [
				"**/*.{js,svelte,ts}",
				"!packages/*/dist/**",
				"!sites/*/build/**",
				"./config/eslint.config.js"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"./packages/monorepo:pre-commit",
				"./sites/monorepo:pre-commit"
			]
		},
		"release": {
			"command": "changeset publish",
			"dependencies": [
				"./packages/monorepo:release"
			]
		},
		"test": {
			"dependencies": [
				"./packages/monorepo:test",
				"./sites/monorepo:test"
			]
		},
		"version": {
			"command": "changeset version",
			"files": [
				"./.changeset/*.md",
				"./packages/**/package.json",
				"./packages/**/CHANGELOG.md"
			],
			"output": []
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.55.0",
		"prettier": "^3.1.0",
		"wireit": "^0.14.1"
	},
	"type": "module"
}
