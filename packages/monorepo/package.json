{
	"name": "monorepo",
	"scripts": {
		"build": "wireit",
		"dev": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": [
				"types"
			]
		},
		"dev": {
			"command": "tsc --build --watch",
			"service": true,
			"files": []
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"types/**",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "tsx --test --test-reporter spec",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.*",
		"!**/*.spec.*"
	],
	"devDependencies": {
		"@types/node": "^20.10.5",
		"publint": "^0.2.6",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"type": "module"
}
